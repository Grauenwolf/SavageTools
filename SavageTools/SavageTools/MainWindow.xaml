<Window x:Class="SavageTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SavageTools"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="700">
    <DockPanel>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Grid.Column="0">
            <Label Content="Archetype" />
            <StackPanel>
                <ComboBox ItemsSource="{Binding CharacterGenerator.Archetypes}" SelectedItem="{Binding CharacterGenerator.SelectedArchetype}" Margin="4">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ComboBox>
                <CheckBox Content="Random" IsChecked="{Binding CharacterGenerator.RandomArchetype}"/>
            </StackPanel>
            <Label Content="Race" />
            <StackPanel>
                <ComboBox ItemsSource="{Binding CharacterGenerator.Races}" SelectedItem="{Binding CharacterGenerator.SelectedRace}" Margin="4">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ComboBox>
                <CheckBox Content="Random" IsChecked="{Binding CharacterGenerator.RandomRace}"/>
            </StackPanel>
            <Label Content="Rank" />
            <StackPanel>
                <ComboBox ItemsSource="{Binding CharacterGenerator.Ranks}" SelectedItem="{Binding CharacterGenerator.SelectedRank}" Margin="4">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ComboBox>
                <CheckBox Content="Random" IsChecked="{Binding CharacterGenerator.RandomRank}"/>
            </StackPanel>

            <StackPanel>
                <CheckBox Content="Wild Card" IsChecked="{Binding CharacterGenerator.WildCard}" Margin="4"/>
                <CheckBox Content="Born A Hero" IsChecked="{Binding CharacterGenerator.BornAHero}" Margin="4" ToolTip="If checked, ranks are ignored for edge selection."/>
            </StackPanel>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" >
            <Button Content="Create Character" Command="{Binding CreateCharacterCommand}" Margin="6"/>
            <Button Content="Copy All" Command="{Binding CopyAllCommand}" Margin="6"/>

            <Button Content="Add Setting" Command="{Binding LoadSettingCommand}" Margin="6"/>
            <TextBlock Text="Settings" Margin="4" />
            <ItemsControl ItemsSource="{Binding CharacterGenerator.Settings}">

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="4" />
                                </Style>

                            </StackPanel.Resources>
                            <TextBlock Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>


        </StackPanel>
        <ScrollViewer>
            <ItemsControl ItemsSource="{Binding Characters}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:CharacterControl/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>
